{
  "name": "@mcp-shark/mcp-shark-common",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js"
  },
  "files": [
    "index.js",
    "db/**/*.js",
    "configs/**/*.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,md}\"",
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run lint:fix && npm run format",
    "publish:public": "npm publish --access public",
    "publish:dry-run": "npm publish --dry-run"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sqlite",
    "database",
    "logging",
    "audit",
    "mcp-shark"
  ],
  "author": "",
  "license": "ISC",
  "description": "Shared utilities and database management for MCP Shark - provides database initialization, audit logging, query utilities, and configuration management",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-shark-org/mcp-shark-common.git"
  },
  "bugs": {
    "url": "https://github.com/mcp-shark-org/mcp-shark-common/issues"
  },
  "homepage": "https://github.com/mcp-shark-org/mcp-shark-common#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  }
}
